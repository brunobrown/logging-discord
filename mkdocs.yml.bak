site_name: Logging Discord
repo_url: https://github.com/brunobrown/logging-discord
repo_name: brunobrown/logging-discord
edit_uri: /tree/master/docs

theme:
  name: material
  logo: /assets/logo.png
  language: pt-BR
  custom_dir: .
  favicon: /assets/favicon.png
  static_templates:
    - "404.html"
    - "sitemap.xml"
    - "robots.txt"

markdown_extensions:
  - attr_list
  - admonition
  - pymdownx.tasklist
  - pymdownx.superfences:
      custom_fences:
        - name: mermaid
          class: mermaid
          format: !!python/name:pymdownx.superfences.fence_code_format
  - pymdownx.emoji:
      emoji_index: !!python/name:materialx.emoji.twemoji
      emoji_generator: !!python/name:materialx.emoji.to_svg

extra_css:
  - css/extra.css

plugins:
  - macros
  - mkdocstrings:
      handlers:
        python:
          paths: [ docs/logging_discord ]
  - search
  - i18n:
      docs_structure: suffix
      default_language: en
      languages:
        - locale: en
          default: true
          name: English
          build: true
        - locale: pt
          name: Portuguese
          build: true

extra:
  commands:
    import: from logging_discord import LogDiscord